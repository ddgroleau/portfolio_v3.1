@page
@model portfolio_v3._1.Pages.WorkModel
@{
    ViewData["Title"] = "Work";
}

 <section class="work__component">
        <h1>Work</h1>
        <menu class="work__btns">
            <button onClick="scrollElementIntoView('projects')" class="styled__link">Go to Projects</button>
            <button onClick="scrollElementIntoView('community')" class="styled__link">Go to Community Involvement</button>
        </menu>
        <h2 id="projects" class="work__heading">Software Projects</h2>
        <section class="work__cards">
            @foreach (SoftwareProject project in Model.Projects)
            {
                <article class="project__card reveal">
                    <div class="project__image">
                        <img src="~/media/@project.ImagePath" height="180" width="200" alt="@project.ImageAlt"/>
                    </div>
                    <div class="project__body">
                        <h3 class="project__body-title">@project.Title</h3>
                        <p><u>Technologies:</u>&nbsp;@string.Join(", ",project.Technologies)</p>
                        <p>@project.Description</p>
                        <menu class="project__body-links">
                            @if(!string.IsNullOrWhiteSpace(project.RepositoryHref))
                            {
                                <a class="styled__link" href="@project.RepositoryHref" target="_blank">VIEW CODE</a>
                            }
                            @if(!string.IsNullOrWhiteSpace(project.SiteHref))
                            {
                                <a class="styled__link" href="@project.SiteHref" target="_blank">GO TO SITE</a>
                            }
                        </menu>
                        </div>
                </article>
            }
        </section>
        <h2 id="community" class="work__heading">Community Involvement</h2>
        <section class="work__cards">
            @foreach (CommunityContribution contribution in Model.Contributions)
            {
                <article class="community__card reveal">
                    <div class="community__image">
                        <img src="~/media/@contribution.ImagePath" height="172" width="141" alt="@contribution.ImageAlt" />
                    </div>
                    <div class="community__body">
                        <h3 class="community__body-title">@contribution.Title</h3>
                        <p>@contribution.Description</p>
                        <a class="styled__link" href="@contribution.LinkHref" target="_blank">@contribution.LinkText</a>
                    </div>
                </article>
            }
        </section>
    </section>
